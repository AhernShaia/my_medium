<div class="justify-content-center">
<div class="card">
  <div class="card-content">
<h2 class="title">個人資料</h2>
<div class="is-flex">


<%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>

  <div class="field">
    <%= f.label :email, '電子信箱', class: 'label' %>
    <%= f.email_field :email, autofocus: true, autocomplete: "email", class: 'input' %>
  </div>

  <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
    <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
  <% end %>

  <div class="field">
    <%= f.label :password, '密碼', class: 'label' %>(如果您不想更改，請留空)
    <%= f.password_field :password, autocomplete: "new-password", class: 'input' %>
    <% if @minimum_password_length %>
      
      
    <% end %>
  </div>

  <div class="field">
    <%= f.label :password_confirmation, '密碼確認', class: 'label' %>
    <%= f.password_field :password_confirmation, autocomplete: "new-password", class: 'input' %>
  </div>

  <div class="field">
    <%= f.label :current_password, '當前密碼', class: 'label' %> <i>(我們需要您當前的密碼來確認您的更改)</i>
    <%= f.password_field :current_password, autocomplete: "current-password", class: 'input' %>
  </div>

  <div class="actions">
    <%= f.submit "Update", class: 'button' %>
  </div>
<% end %>



</div>
</div>
</div>
</div>