<div class="justify-content-center">
<div class="card">
  <div class="card-content">
  <h2 class="title">登入</h2>
  <div class="is-flex">
  <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
    <div class="field">
      <%= f.label :email, '電子信箱', class: 'label' %>
      <%= f.email_field :email, autofocus: true, autocomplete: "email", class: 'input' %>
    </div>

    <div class="field">
      <%= f.label :password, '密碼', class: 'label' %>
      <%= f.password_field :password, autocomplete: "current-password", class: 'input' %>
    </div>

    <% if devise_mapping.rememberable? %>
      <div class="field">
        <%= f.check_box :remember_me %>
        <%= f.label :remember_me, '記住賬號', class: 'label' %>
      </div>
    <% end %>

    <div class="actions">
      <%= f.submit "登入", class: 'button' %>
      <%= render "devise/shared/links" %>
    </div>
    
  <% end %>
  </div>
  </div>
  </div>

</div>