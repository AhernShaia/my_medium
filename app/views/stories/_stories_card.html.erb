<div class="card stories">
<% stories.each do | story | %>
  <div class="card-content stories">
  
    <div class="media">
    
      <div class="media-left">
        <figure class="image is-96x96">
          <img src="https://bulma.io/images/placeholders/96x96.png" alt="Placeholder image">
        </figure>
      </div>
     
    </div>

    <div class="content">
        <h3 class="title"><%= story.title %> </h3>
        <p><%= story.content %></p>

      <br>
      <p class="stories content">最後編輯時間： <%= (story.updated_at).strftime("%Y/%m/%d at %I:%M%p ") %>
        <%= link_to "編輯", edit_story_path(story), class: 'button is-text is-small' %>
        <%= link_to "刪除", story_path(story.id), method: :delete, class: 'button is-small is-danger', data: {confirm: '是否刪除'} %>
        
        </p>

    
      
    </div>
  </div>
  <hr>
  <% end %>
</div>


