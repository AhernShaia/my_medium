<div class="container">
  <div class="justify-content-center story">
    <div class="card">
      <div class="card-content">

        <div class="is-flex story">

          <%= form_with(model: story) do |f| %>
            <div class="field">
              <%= f.label :title, "標題", class: "label" %>
              <%= f.text_field :title, class: "input" %>
            </div>

            <div class="field">
              <%= f.label :content, "內容", class: "label" %>
              <%= f.text_area :content, class: "textarea has-fixed-size", rows: 10 %>
            </div>

            
            <%= f.submit '儲存草稿', class: 'button is-light login', name: 'save_as_draft'  %>
            <%= f.submit '發佈故事', class: 'button is-primary login', name: 'publish' if story.may_publish?  %>
            <%= f.submit '故事下架', class: 'button is-danger login', name: 'unpublish' if story.may_unpublish?  %>

           
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>
