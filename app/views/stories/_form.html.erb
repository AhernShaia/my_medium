<div class="container">
  <div class="justify-content-center story">
    <div class="card">
      <div class="card-content">

        <div class="is-flex story">

          <%= form_with(model: story) do |f| %>
            <div class="field">
              <%= f.label :title, "標題", class: "label" %>
              <%= f.text_field :title, class: "input" %>
            </div>

            <div class="field">
              <%= f.label :content, "內容", class: "label" %>
              <%= f.text_area :content, class: "textarea has-fixed-size", rows: 10 %>
            </div>

            
            <%= f.submit(params[:action] == 'new' ? '儲存草稿' : '更新故事' ,class: 'button is-light login', name: 'save_as_draft')  %>
            <%= f.submit(params[:action] == 'new' ? '發佈故事' : '更新故事' ,class: 'button  is-primary publish', name: 'publish')  %>

          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>
